{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Explore telecom graph",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/explore_telecom_graph.py",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "justMyCode": false
    },
    {
      "name": "Add causal overlay",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/add_causal_overlay.py",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "justMyCode": false
    },
    {
      "name": "Evaluate why-aware",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/evaluate_why_aware.py",
      "args": ["--responses-file", "${workspaceFolder}/responses.json"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "justMyCode": false
    },
    {
      "name": "Pytest: current file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--no-cov"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "justMyCode": false
    },
    {
      "name": "Pytest: all tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--no-cov"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "justMyCode": false
    }
  ]
}
